<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   <xacro:include filename="$(find rm_bnrobot_sim)/urdf/bngu_sentinel/common_inertia.xacro" />
    <xacro:macro name="wheel_s_xacro" params="wheel_s_name xyz">
        <link name="${wheel_s_name}_wheel_s_link">
            <visual>
                <origin xyz="0 0 0" rpy="1.57079 0 1.57079" />
                <geometry>
                    <cylinder length="0.04" radius="0.055" /><!-- 0.032-->
                </geometry>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57079 0 1.57079" />
                <geometry>
                    <cylinder length="0.04" radius="0.055" />
                </geometry>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 0.8"/>
                </material>
            </collision>
            <xacro:cylinder_inertia m="0.1" h="0.04" r="0.055"/>
        </link>
        <gazebo reference="${wheel_s_name}_wheel_s_link">
            <mu1 value="20.0" />
            <mu2 value="20.0" />
            <kp value="1000000000.0" />
            <kd value="1.0" />
        </gazebo>

        <joint name="${wheel_s_name}_wheel_s_joint" type="continuous">
            <parent link="base_link" />
            <child link="${wheel_s_name}_wheel_s_link" />
            <origin xyz="${xyz}" />
            <axis xyz="1 0 0" />
        </joint>
    </xacro:macro>
</robot>
